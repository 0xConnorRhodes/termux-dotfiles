# ALIASES
alias e="vim"
alias fe='vim "$(fd -t f . | fzf)"'
alias cm="chezmoi"
alias gs="git status"
alias cmd="chezmoi cd"
alias cmu="chezmoi update --apply"
alias gmm="git add . && git commit -m 'u' && git rebase --continue && git push"

# navigation
alias x="exit"

# CONFIG
HISTFILE=~/.zsh_history
HISTSIZE=1000
SAVEHIST=1000

setopt autosuggestions
setopt hist_verify

autoload -Uz compinit
compinit

PROMPT='%4~:
%B%F{green}%n%f%b %# '
